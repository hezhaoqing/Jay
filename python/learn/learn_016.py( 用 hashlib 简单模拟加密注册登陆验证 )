#!/usr/bin/env python
#coding:utf8

import hashlib

def md5(arg):                                        # 加密函数，把传进来的参数加密
    md5_pwd = hashlib.md5(bytes('abd'))
    md5_pwd.update(bytes(arg))
    return md5_pwd.hexdigest()                       # 返回加密的数据

def login(user,pwd):                                 # 登陆函数，由于md5不能反解，因此登陆的时候用正解
    with open('db','r') as f:
        for line in f:
            u,p=line.strip().split('|')
            if u ==user and p == md5(pwd):           # 登陆验证
                return True

def register(user,pwd):                              # 注册函数，注册的时候把用户名和加密的密码写进文件，保存起来。
    with open('db','a') as f:
        temp = user+'|'+md5(pwd)
        f.write(temp)

i=raw_input('1表示登陆，2表示注册：')

if i=='2':
    user = raw_input('用户名：')
    pwd = raw_input('密码：')
    register(user,pwd)
elif i=='1':
    user = raw_input('用户名：')
    pwd =raw_input('密码：')
    r=login(user,pwd)                                # 验证用户名和密码
    if r ==True:
        print('登陆成功！')
    else:
        print('密码错误或者账号不存在！！！')
else:
    print('输入错误！请选择1或者2！！')
