#!/bin/env python
#coding:uft-8
## usage: python $0 (关键词) (文件名)

import fileinput
import re
import sys


pattern= re.compile(sys.argv[1])                                                                  ### 详见 模块re.py
for line in fileinput.input(sys.argv[2]):
	if pattern.search(line):                                                                  ### re的几个常见函数    
		print "%s\n%s\n%s"  %(fileinput.filename(),fileinput.filelineno(),line),

